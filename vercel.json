{
  "buildCommand": "npm run build",
  "devCommand": "next dev",
  "installCommand": "npm install --legacy-peer-deps && (pip install -r requirements.txt || echo 'Skipping Python dependencies')",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "env": {
    "OPENAI_API_KEY": "${OPENAI_API_KEY}",
    "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}"
  },
  "crons": [
    {
      "path": "/api/cron/scrape",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/scrape-mcp",
      "schedule": "30 */6 * * *"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  }
}

